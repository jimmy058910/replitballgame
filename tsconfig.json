{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*", "types/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts", "**/*_backup.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "target": "ES2015",
    "module": "ESNext",
    // ðŸš€ RELAXED SETTINGS FOR DEVELOPMENT VELOCITY
    "strict": false,              // Turn off strict mode
    "noImplicitAny": false,      // Allow implicit any types
    "strictNullChecks": false,    // Allow null/undefined issues
    "strictFunctionTypes": false, // Relax function type checking
    "strictBindCallApply": false, // Relax bind/call/apply checking
    "strictPropertyInitialization": false, // Allow uninitialized properties
    "noImplicitThis": false,     // Allow implicit this
    "alwaysStrict": false,       // Don't force strict mode
    "noImplicitReturns": false,  // Allow missing return statements
    "noUnusedLocals": false,     // Allow unused local variables
    "noUnusedParameters": false, // Allow unused function parameters
    
    // Keep essential settings for functionality
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,        // Skip type checking of library files
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "vite/client": ["./node_modules/vite/client.d.ts"],
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    },
    
    // Keep some helpful settings that don't block development
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true
  }
}