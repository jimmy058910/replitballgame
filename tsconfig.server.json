{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "noEmit": false,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "types/**/*"
  ],
  "exclude": [
    "client",
    "tests",
    "dist"
  ]
}