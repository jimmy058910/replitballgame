  "revenue_formulas": {
    "description": "Per-game revenue calculation formulas",
    "tickets": {
      "base_price": 25,
      "formula": "attendance × base_price",
      "description": "Fixed ticket price per attendee"
    },
    "concessions": {
      "base_revenue": 8,
      "formula": "attendance × base_revenue × facility_level",
      "multiplier_per_level": 0.15,
      "description": "Food/beverage sales scaled by facility level"
    },
    "parking": {
      "base_revenue": 10,
      "attendance_factor": 0.30,
      "formula": "(attendance × attendance_factor) × base_revenue × facility_level",
      "multiplier_per_level": 0.10,
      "description": "Parking fees for ~30% of attendees"
    },
    "merchandising": {
      "base_revenue": 3,
      "formula": "attendance × base_revenue × facility_level",
      "multiplier_per_level": 0.12,
      "description": "Apparel and merchandise sales"
    },
    "vip_suites": {
      "flat_revenue": 5000,
      "formula": "facility_level × flat_revenue",
      "description": "Fixed premium revenue per VIP suite level"
    }
  },
  
  "attendance": {
    "description": "Fan attendance calculation factors",
    "base_rate": 0.35,
    "fan_loyalty_factor": 0.60,
    "win_streak_bonus": 0.05,
    "division_prestige": {
      "1": 0.20,
      "2": 0.15, 
      "3": 0.12,
      "4": 0.10,
      "5": 0.08,
      "6": 0.05,
      "7": 0.03,
      "8": 0.00
    },
    "min_attendance_rate": 0.15,
    "max_attendance_rate": 0.95,
    "formula": "Math.min(max_rate, Math.max(min_rate, base_rate + (fan_loyalty × loyalty_factor) + win_streak_bonus + division_bonus))"
  },
  
