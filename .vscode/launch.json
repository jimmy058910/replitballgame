{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🎮 Debug Backend Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/index.ts",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx", "--inspect=0.0.0.0:9229"],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "realm-rivalry:*"
      },
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "🔗 Attach to Backend",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "protocol": "inspector"
    },
    {
      "name": "🧪 Debug Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["run"],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    },
    {
      "name": "🗄️ Debug Database Script",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/setup-local-db.js",
      "runtimeExecutable": "node",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    }
  ],
  "compounds": [
    {
      "name": "🚀 Full Stack Debug",
      "configurations": ["🎮 Debug Backend Server"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "realm-rivalry",
        "order": 1
      }
    }
  ]
}