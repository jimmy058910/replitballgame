// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma" // Using your specified output path
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Takes the DATABASE_URL from your .env file
}

// Define your UserProfile model below
model UserProfile {
  id        Int      @id @default(autoincrement())
  userId    String   @unique // Assuming you might have user IDs from an auth system
  bio       String?  // Optional text for the user's biography
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}