{
  "version": "0.4.1",
  "intelligence": {
    "enableRealTimeAnalysis": true,
    "enablePatternLearning": true,
    "vectorEmbeddings": false
  },
  "watching": {
    "patterns": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.py",
      "**/*.rs",
      "**/*.go",
      "**/*.java",
      "**/*.md",
      "**/*.json"
    ],
    "ignored": [
      "**/node_modules/**",
      "**/.git/**",
      "**/dist/**",
      "**/build/**",
      "**/target/**"
    ],
    "debounceMs": 500
  },
  "mcp": {
    "serverPort": 3000,
    "enableAllTools": true
  }
}